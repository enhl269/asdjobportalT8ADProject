package sg.edu.iss.asdadt8.jobs;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import sg.edu.iss.asdadt8.domain.Job;
import sg.edu.iss.asdadt8.review.JobRepository;

@Service
public class JobServiceImpl implements JobService {

	@Autowired
	JobRepository jrepo;

	@Override
	public List<Job> showallJobs() {
		// TODO Auto-generated method stub
		return jrepo.findAll();
	}

	@Override
	public List<Job> findJobs(String searchKey) {
		// TODO Auto-generated method stub
		return jrepo.findByJobName(searchKey);
	}
	
}
